{
  "name": "b2b-corporate-website",
  "version": "0.1.0",
  "private": true,
  "description": "B2B Foreign Trade Corporate Website - Next.js 15 + Cloudflare Workers",
  "license": "MIT",
  "author": "Ahmed Elsakaan",
  "type": "module",
  "scripts": {
    "build": "next build",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "commit": "git-cz",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "dev": "next dev --turbopack",
    "format": "pnpm format:check --write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "lint": "next lint --dir . --max-warnings=0",
    "lint:md": "markdownlint-cli2 \"**/*.{md,markdown}\" \"!node_modules\" \"!.changeset\" \"!CHANGELOG.md\"",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "release": "changeset tag && git push --follow-tags",
    "spellcheck": "cspell \"**\" --gitignore --dot --no-progress --unique",
    "start": "next start",
    "test": "vitest --browser.headless --run",
    "test:browser": "vitest",
    "test:e2e": "playwright test",
    "test:watch": "vitest --browser.headless",
    "typecheck": "tsc",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "lint:unused": "knip --config config/knip.jsonc",
    "lint:dup": "jscpd --config config/jscpd.json src",
    "lint:deps": "depcruise --config config/dependency-cruiser.cjs src",
    "lint:security": "semgrep --config config/semgrep.yml --error src",
    "audit:seo": "lhci autorun --config config/lighthouserc.js",
    "quality": "pnpm typecheck && pnpm lint && pnpm lint:unused && pnpm lint:dup && pnpm lint:deps",
    "circular:check": "madge --circular --extensions ts,tsx src/",
    "validate:translations": "tsx scripts/validate-translations.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.3.1",
    "@opennextjs/cloudflare": "1.0.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.4",
    "arktype": "^2.1.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.510.0",
    "next": "^15.3.2",
    "next-intl": "^4.5.8",
    "next-nprogress-bar": "^2.4.7",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.0",
    "velite": "^0.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@cloudflare/workers-types": "^4.20251209.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint-react/eslint-plugin": "^1.49.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@lhci/cli": "^0.15.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/eslint-plugin-next": "^15.3.2",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/utils": "^8.32.1",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/browser": "^3.2.4",
    "commitizen": "^4.3.1",
    "cspell": "^9.0.2",
    "dependency-cruiser": "^17.3.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import-x": "^4.13.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.1.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.3.7",
    "jscpd": "^4.0.5",
    "knip": "^5.72.0",
    "lefthook": "^1.11.13",
    "madge": "^8.0.0",
    "markdownlint": "^0.38.0",
    "markdownlint-cli2": "^0.18.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.14",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^0.1.1",
    "wrangler": "^4.16.1"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "volta": {
    "node": "22.15.0",
    "pnpm": "10.10.0"
  }
}
